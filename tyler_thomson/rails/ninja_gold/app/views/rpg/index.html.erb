<div class="wrapper">
  <p>Your gold: <%= session[:gold] %></p>

  <form action="/rpg/reset" method="post">
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" />
    <p>Reset this session</p>
    <input type="submit" value="Reset">
  </form>

    <div class="">
      <div class="farm">
        <form action="/rpg/farm" method="post">
          <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" />
          <input type="hidden" name="building" value="farm">
          <p>Farm</p>
          <p>(earns 10-20 golds)</p>
          <input type="submit" value="Find Gold">
        </form>
      </div>

      <div class="cave">
        <form action="/rpg/cave" method="post">
          <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" />
          <input type="hidden" name="building" value="cave">
          <p>Cave</p>
          <p>(earns 5-10 golds)</p>
          <input type="submit" value="Find Gold">
        </form>
      </div>

      <div class="house">
        <form action="/rpg/house" method="post">
          <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" />
          <input type="hidden" name="building" value="house">
          <p>House</p>
          <p>(earns 2-5 golds)</p>
          <input type="submit" value="Find Gold">
        </form>
      </div>

      <div class="casino">
        <form action="/rpg/casino" method="post">
          <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>" />
          <input type="hidden" name="building" value="casino">
          <p>Casino</p>
          <p>(earns/takes 0-50 golds)</p>
          <input type="submit" value="Find Gold">
        </form>
      </div>
    </div>

    <div class="">
      <p>Activities:</p>
      <% @activities.each do |activity| %>
        <p><%= activity %></p>
      <% end %>
    </div>
</div>
